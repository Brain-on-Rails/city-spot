<%= form_with model: place, data: { mapTarget: :form }, class: "p-4 shadow-md bg-base-200 mx-4" do |f| %>

  <fieldset class="fieldset mx-auto bg-base-100 border-base-300 rounded-box w-auto border p-4">
    <legend class="fieldset-legend">Coordinates</legend>

    <div class="form-control">
      <%= f.label :latitude, class: "label" %>
      <%= f.number_field :latitude, data: {map_target: "lat"}, class: "input input-sm validator", min: -90, step: "any", max: 90, required: true %>
    </div>

    <div class="form-control">
      <%= f.label :longitude, class: "label" %>
      <%= f.number_field :longitude, data: {map_target: "lng"}, class: "input input-sm validator", min: -180, step: "any", max: 180, required: true %>
    </div>

  </fieldset>

  <fieldset class="fieldset mx-auto bg-base-100 border-base-300 rounded-box w-auto border p-4">
    <legend class="fieldset-legend">Details</legend>
    <div class="form-control">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input input-sm validator", required: false, minlength: 3, maxlength: 255 %>

      <%= render partial: "shared/error_messages", locals: {errors: place.errors[:name], field: :name} %>
    </div>

    <div class="form-control">
      <%= f.label :description, class: "label" %>
      <%= f.text_area :description, class: "textarea textarea-sm validator", maxlength: 1000 %>
    </div>
  </fieldset>

  <div class="form-control my-6 text-center">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
